<h1>Log In</h1>

<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="field">
    <%= f.label :email, "Email Address" %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Log In" %>
  </div>
<% end %>
